{
  "name": "three-uilas-website",
  "version": "1.0.0",
  "description": "Three Uilas - Electric Farm Utility Vehicles Website",
  "scripts": {
    "build": "npm run copy && npm run build:css",
    "build:css": "tailwindcss -i src/index.css -o dist/index.css",
    "copy": "cp -r src/ dist/",
    "watch": "tailwindcss -i src/index.css -o dist/index.css --watch",
    "serve": "cd dist && python3 -m http.server 8000",
    "dev": "npm run watch & npm run serve",
    "stop": "pkill -f 'python3 -m http.server' || lsof -ti:8000 | xargs kill -9",
    "clean": "rm -rf dist && mkdir dist"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "tailwindcss": "^4.1.11"
  }
}
